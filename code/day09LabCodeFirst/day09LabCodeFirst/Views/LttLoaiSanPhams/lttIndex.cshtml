@model IEnumerable<day09LabCodeFirst.Models.LttLoaiSanPham>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.lttMaLoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lttTenLoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lttTrangThai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.lttMaLoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lttTenLoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lttTrangThai)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.lttId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.lttId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.lttId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
