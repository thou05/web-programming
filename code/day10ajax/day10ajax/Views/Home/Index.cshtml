                //     'padding': '1rem',
                //     'background': 'pink',
                // }).click(function(){
                //     $('p').css('color', valColor);
                // })

                $(this).click(function(){
                     $('p').css('color', $(this).attr('data-value'));
                })
            })
        })
    </script>
}
